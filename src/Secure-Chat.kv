#:kivy 1.0.5 

<LoginScreen>
	#status:result
	canvas:
        Rectangle:
        	source: 'background.png'
            pos: self.pos
            size: self.size

    Label:

    	text: 'Murmur'
    	font_name: 'Fonts/Lobster/Lobster-Regular.ttf'
        font_size: 100
    	size_hint: .6, .1
    	pos_hint: {'x':.2, 'y':.7}
    	color: 255,0,0,1

	TextInput:
        
        multiline: False
        size_hint: .6, .1
        pos_hint: {'x':.2, 'y':.5}
        font_name: 'Fonts/Josefin_Sans/JosefinSans-Light.ttf'
        font_size: 45
        id: username

    TextInput:

        multiline:False
        size_hint: .6, .1
        pos_hint: {'x':.2, 'y':.35}
        font_name: 'Fonts/Josefin_Sans/JosefinSans-Light.ttf'
        font_size: 40
        id: password

    Button:

    	text: 'Login'
    	font_name: 'Fonts/Josefin_Sans/JosefinSans-Light.ttf'
    	font_size: 40
    	size_hint: .4, .1
    	pos_hint: {'x':.3, 'y':.2}
        on_press:root._login_handler(username.text,password.text) 